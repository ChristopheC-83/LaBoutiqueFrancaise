{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div class="container">

		<h1 class="my-4 text-center">Connexion</h1>

		<form action="{{ path('app_login') }}" method="post">
			<label for="username">Votre email:</label>
			<input class="form-control mb-2" type="text" id="username" name="_username" value="{{ last_username }}">

			<label for="password">Votre mot de passe :</label>
			<input class="form-control" type="password" id="password" name="_password">


			<input type="hidden" name="_target_path" value="{{ path('app_account') }}">

			<button type="submit" class="btn btn-success mt-4 w-100">Me connecter</button>
		</form>
			<a href="{{path('app_register')}}">
				<button type="submit" class="btn btn-primary mt-4 w-100">Vous n'avez pas de compte ? Inscrivez-vous !</button>
			</a>
	</div>
{% endblock %}
