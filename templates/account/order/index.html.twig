{% extends 'base.html.twig' %}


{% block body %}

	<div class="container">

		<h1 class="my-4">Espace Membre</h1>


		<div class="row">
			<div class="col-md-3">{% include 'account/_menu.html.twig' %}</div>
			<div class="col-md-9">
                <a href="{{ path('app_account')  }}"><button class="btn btn-light mb-4">⏪ Retour </button></a>
				<h5>Ma Commande n° :
					{{order.id}}</h5>

				<p>Commande du :
					{{ order.createdAt|date('d/m/Y') }}
				</p>
				<p class="my-4">{{ include ('admin/state.html.twig',{ field : {'value' : order.state}})}}</p>

				<hr>

				<div class="row">
					<div class="col-md-4">
						<p>
							<b>Addresse de livraison:
								<br/></b>
							{{ order.delivry|raw}}</p>
					</div>
					<div class="col-md-8">
						<p>
							<b>Transporteur :<br/></b>
							{{ order.carrierName|raw}}</p>


					</div>
<hr>
					<p>
						<b>Contenu de la commande :</b>
					</p>
					<table class="table table stripped">
						<thead>
							<tr>
								<th scope="col">Illustration</th>
								<th scope="col">Nom Produit</th>
								<th scope="col">Qtt</th>
								<th scope="col">PU HT</th>
								<th scope="col">TVA</th>
								<th scope="col">PU TTC</th>
								<th scope="col">Total TTC</th>
							</tr>
						</thead>
						<tbody>
							{% for product in order.orderDetails %}
								<tr>
									<td><img src="/uploads/{{product.productIllustration}}" width="100px" alt="{{product.productName}}"/></td>
									<td>{{product.productName}}</td>
									<td>{{product.productQuantity}}</td>
									<td>{{product.productPrice|price}}</td>
									<td>{{product.productTva}}</td>
									{% set coeff = 1 + (product.productTva / 100)  %}
									<td>{{ (product.productPrice * coeff)|price }}</td>
									<td>{{ ((product.productPrice * coeff) * product.productQuantity)|price }}</td>
								</tr>
							{% endfor %}
							<tr>
								<td>Tranport :</td>
								<td>{{ order.carrierName}}</td>
								<td></td>
								<td></td>
								<td></td>
								<td></td>
								<td>{{ order.carrierPrice|price}}</td>
							</tr>
						</tbody>
					</table>
					<div class="d-flex flex-column w-auto ms-auto">

						<div class="d-flex justify-content-between w-100">
							<p class="mx-3">
								<b>TOTAL H.T. :</b>
							</p>
							<p>
								{{(order.totalWt - order.totalTva)|price}}</p>
						</div>
						<div class="d-flex justify-content-between w-100">
							<p class="mx-3">
								<b>TOTAL TVA :</b>
							</p>
							<p>
								{{order.totalTva|price}}</p>
						</div>
						<div class="d-flex justify-content-between w-100">
							<p class="mx-3">
								<b>TOTAL TTC :</b>
							</p>
							<p>
								<b>{{order.totalWt|price}}</b>
							</p>
						</div>
					</div>
				</div>

			</div>
		</div>

	</div>
{% endblock %}
